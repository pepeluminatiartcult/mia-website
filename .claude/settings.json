{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '--- HANDOFF: REQUESTS ---' && cat ~/mia/handoff/requests.md 2>/dev/null && echo '--- HANDOFF: OPENCLAW STATUS ---' && cat ~/mia/handoff/openclaw-status.md 2>/dev/null && echo '--- HANDOFF: END ---'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "tool == 'Edit' && tool_input.file_path matches '\\.(ts|tsx)$'",
        "hooks": [
          {
            "type": "command",
            "command": "cd ~/mia-website && npx tsc --noEmit --pretty 2>&1 | head -20"
          }
        ]
      },
      {
        "matcher": "tool_input.file_path matches '/mia/content/.*\\.md$'",
        "hooks": [
          {
            "type": "command",
            "command": "~/mia/scripts/hook-check-patterns.sh"
          }
        ]
      },
      {
        "matcher": "tool_input.file_path matches '/MIA/Content/.*\\.md$'",
        "hooks": [
          {
            "type": "command",
            "command": "~/mia/scripts/hook-check-patterns.sh"
          }
        ]
      }
    ]
  }
}
